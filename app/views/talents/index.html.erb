<div>
  <div>
    <h1>
      List of My talents
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <% if @current_user.talents.length == 0%>
          Looks like you got no talent! Add your skills below and start jammin'.
        <% else %>
        <th>
          Instrument
        </th>
        <th>
          Genre
        </th>

        <th>
        </th>
      </tr>
      <% end %>
      <% @current_user.talents.each do |a_talent| %>
      <tr>
        <td>
          <%= a_talent.instrument.instrument_name %>
        </td>
        <td>
          <%= a_talent.instrument.genre %>
        </td>
        <td>
          <a href="/delete_talent/<%= a_talent.id %>">
            Forget this talent
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
<%if @current_user !=nil%>
<div>
  <div>
    <h2>
      Add a new talent
    </h2>

    <form action="/insert_talent" method="post">
      <div>
        <input type="hidden" value="<%=@current_user.id%>" name="query_musician_id">
      </div>

      <div>
        <label for="instrument_id_box">
          Instrument
        </label>
        <select name="query_instrument_id" id="instrument_id_box">
        <% Instrument.all.each do |a_instrument| %>
            <option value="<%=a_instrument.id%>"><%= a_instrument.instrument_name %></option>
          <% end %>
        </select>
      </div>

      <button>
        Create talent
      </button>
    </form>
  </div>
</div>
<% end %>