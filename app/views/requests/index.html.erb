<div>
  <div>
    <h1>
      List of all requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new request
    </h2>

    <form action="/insert_request" method="post">
      <div>
        <label for="requestor_id_box">
          Requestor
        </label>

        <input type="text" id="requestor_id_box" name="query_requestor_id">
      </div>

      <div>
        <label for="group_id_box">
          Group
        </label>

        <input type="text" id="group_id_box" name="query_group_id">
      </div>

      <div>
        <label for="instrument_id_box">
          Instrument
        </label>

        <input type="text" id="instrument_id_box" name="query_instrument_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Requestor
        </th>

        <th>
          Group
        </th>

        <th>
          Instrument
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_requests.each do |a_request| %>
      <tr>
        <td>
          <%= a_request.id %>
        </td>

        <td>
          <%= a_request.requestor_id %>
        </td>

        <td>
          <%= a_request.group_id %>
        </td>

        <td>
          <%= a_request.instrument_id %>
        </td>

        <td>
          <%= a_request.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_request.updated_at) %> ago
        </td>

        <td>
          <a href="/requests/<%= a_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
