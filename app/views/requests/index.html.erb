<div>
  <div>
    <h1>
      List of all requests for My Duets
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Requestor
        </th>

        <th>
          Group
        </th>

        <th>
          Instrument
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_requests.each do |a_request| %>
      <tr>
        <td>
          <%= a_request.id %>
        </td>

        <td>
          <%= a_request.requestor_id %>
        </td>

        <td>
          <%= a_request.group_id %>
        </td>

        <td>
          <%= a_request.instrument_id %>
        </td>

        <td>
          <%= a_request.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_request.updated_at) %> ago
        </td>

        <td>
          <form action="/modify_request/<%= a_request.id %>" method="post">
            <input type="hidden" name="query_requestor_id" value="<%=a_request.requestor_id%>">
            <input type="hidden" name="query_group_id" value="<%=a_request.group_id%>">
            <input type="hidden" name="query_instrument_id" value="<%=a_request.instrument.id%>">
            <input type="hidden" name="query_status" value="accepted">
            <button>
            Accept
            </button>
          </form>
        </td>
        <td>
          <form action="/delete_request/<%= a_request.id %>" method="get">
            <button>
            Decline
            </button>
          </form>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

