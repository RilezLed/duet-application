<div>
  <div>
    <h1>
      List of all songs
    </h1>
  </div>
</div>

<hr>




<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Band
        </th>

        <th>
          Genre
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_songs.each do |a_song| %>
      <tr>
        <td>
          <%= a_song.id %>
        </td>

        <td>
          <%= a_song.name %>
        </td>

        <td>
          <%= a_song.band %>
        </td>

        <td>
          <%= a_song.genre %>
        </td>

        <td>
          <%= time_ago_in_words(a_song.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_song.updated_at) %> ago
        </td>

        <td>
          <a href="/songs/<%= a_song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
<% if @current_user != nil %>
<div>
  <div>
    <h2>
      Add a new song
    </h2>

    <form action="/insert_song" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="band_box">
          Band
        </label>

        <input type="text" id="band_box" name="query_band">
      </div>

      <div>
        <label for="genre_box">
          Genre
        </label>

        <input type="text" id="genre_box" name="query_genre">
      </div>

      <button>
        Create song
      </button>
    </form>
  </div>
</div>
<% end %>